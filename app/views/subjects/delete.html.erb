<%= link_to("<< Back to list", subjects_path, :class => 'back-link')%>

<div class="subject delete">
    <h2>Delete subject</h2>

    <%= form_for(@subject, :method => 'delete') do |f| %>
        <p>Are you sure you want to pernamently delete this subject?</p>

        <p class="reference-name"><%= f.object.name %> 

        <div class="form-buttons">
            <%= f.submit("Delete subject") %>
        </div>

    <% end %>
</div>