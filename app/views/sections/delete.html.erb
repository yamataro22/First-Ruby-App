<%= link_to("<< Back to list", sections_path, :class => 'back-link')%>

<div class="section delete">
    <h2>Delete section</h2>

    <%= form_for(@section, :method => 'delete') do |f| %>
        <p>Are you sure you want to pernamently delete this section?</p>

        <p class="reference-name"><%= f.object.name %> 

        <div class="form-buttons">
            <%= f.submit("Delete section") %>
        </div>

    <% end %>
</div>